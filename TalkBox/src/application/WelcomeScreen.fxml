<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TalkBoxApp">
   <center>
      <Pane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #00ABD3, #9FE8F9);" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="122.0" layoutY="80.0" prefHeight="75.0" prefWidth="683.0" text="Welcome to the TalkBox Application" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS Bold" size="36.0" />
               </font>
            </Label>
            <Label layoutX="124.0" layoutY="166.0" prefHeight="65.0" prefWidth="678.0" text="TalkBox assists users who have speech impairments to comunicate easily through the use of audio buttons that are both configurable and intuitive." textFill="WHITE" wrapText="true">
               <font>
                  <Font name="Comic Sans MS Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="124.0" layoutY="231.0" prefHeight="34.0" prefWidth="678.0" text="Select one of the options below to get started." textFill="WHITE" wrapText="true">
               <font>
                  <Font name="Comic Sans MS Bold" size="18.0" />
               </font>
            </Label>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" layoutY="385.0" orientation="VERTICAL" prefHeight="213.0" prefWidth="900.0" prefWrapLength="0.0" vgap="15.0">
               <children>
                  <Button id="new-talk-btn" mnemonicParsing="false" onAction="#createNewTalkFileButton" prefHeight="39.0" prefWidth="230.0" style="-fx-background-color: #00A4CA;" text="Create a new TalkFile" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#0000007f" height="8.75" offsetY="2.0" radius="4.1875" width="10.0" />
                     </effect>
                  </Button>
                  <Button id="open-talk-btn" layoutX="345.0" layoutY="10.0" mnemonicParsing="false" onAction="#openExistingTalkFileButton" prefHeight="39.0" prefWidth="230.0" style="-fx-background-color: #00A4CA;" text="Open an existing TalkFile" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#00000080" height="5.0" offsetY="2.0" radius="3.25" width="10.0" />
                     </effect>
                  </Button>
                  <Button id="help-btn" layoutX="345.0" layoutY="49.0" mnemonicParsing="false" onAction="#helpButton" prefHeight="39.0" prefWidth="230.0" style="-fx-background-color: #00A4CA;" text="Help" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="GAUSSIAN" color="#00000080" height="5.0" offsetY="2.0" radius="3.25" width="10.0" />
                     </effect>
                  </Button>
               </children>
            </FlowPane>
            <Label layoutX="692.0" layoutY="614.0" prefHeight="40.0" prefWidth="208.0" text="Created by Nasif, Amaan &amp; Tony">
               <font>
                  <Font name="Javanese Text" size="14.0" />
               </font>
            </Label>
            <Label layoutX="7.0" layoutY="614.0" prefHeight="40.0" prefWidth="174.0" text="EECS 2311 Software Project">
               <font>
                  <Font name="Javanese Text" size="14.0" />
               </font>
            </Label>
            <Label id="github-link" layoutX="334.0" layoutY="614.0" onMouseClicked="#githubLink" prefHeight="40.0" prefWidth="260.0" text=" https://github.com/amaanvania/TalkBox">
               <font>
                  <Font name="Javanese Text" size="14.0" />
               </font>
            </Label>
            <ImageView fitHeight="30.0" fitWidth="35.0" layoutX="304.0" layoutY="619.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@github-logo.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </center>
